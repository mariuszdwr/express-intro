extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        .grid
            if products.length > 0
                each product in products
                    article.card.product_item
                        header.card-header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="/img/book_2.png", alt="Book Image")
                        .card__content
                            h2.product__price $19.99
                            p.product_description A very interesting book so many even more interesting things!
                        .card__actions
                            button.btn Add to Cart
            else
                h2 No products


